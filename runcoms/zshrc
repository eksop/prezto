# Source Prezto.
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi

# Customize to your needs...

HISTSIZE=100000
SAVEHIST=100000

setopt HIST_IGNORE_DUPS

# Functions
[[ -a "~/.function" ]] && source "~/.function"

# Aliases
[[ -a "~/.alias" ]] && source "~/.alias"

# Exports
[[ -a "~/.export" ]] && source "~/.export"
